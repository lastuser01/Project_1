<%layout("/layouts/boilerplate")-%>
<head>
  <link rel="stylesheet" href="/static/css/booking.css" />
</head>
<body>
  <div class="header-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h1 class="display-4">My Hotel Bookings</h1>
          <p class="lead">
            View and manage all your upcoming and past hotel reservations
          </p>
        </div>
        <div class="col-md-4 text-end">
          <a href="/listings" class="btn btn-outline-light">Book New Hotel</a>
        </div>
      </div>
    </div>
  </div>
  <div class="container mb-5">
    <div class="col">
      <!------------------------------------------ Booking Card ------------------------------------------------>
      <% for(booking of bookings){%>
      <div class="row-lg-6 mb-4">
        <div class="card booking-card h-100">
          <div class="position-relative">
            <!-- <img
              src="<%=booking.listing.image.url%>"
              class="card-img-top hotel-image"
              alt="Luxury Hotel"
              height="300"
            /> -->
            <span class="badge bg-success status-badge">Confirmed</span>
          </div>
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <h5 class="card-title mb-0"><%=booking.listing.title%></h5>
            </div>
            <p class="text-muted mb-3">
              <%=booking.listing.location%>, <%=booking.listing.country%>
            </p>
            <div class="row mb-3">
              <div class="col-6">
                <small class="text-muted">Check-in</small>
                <p class="mb-0 fw-bold">
                  <%let checkin =
                  booking.arrival_date.toISOString().slice(0,10)%><%=checkin%>
                </p>
              </div>
              <div class="col-6">
                <small class="text-muted">Check-out</small>
                <p class="mb-0 fw-bold">
                  <%let checkout =
                  booking.dept_year.toString()+"-"+booking.dept_month.toString()+"-"+booking.dept_day.toString()%><%=checkout%>
                </p>
              </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
              <div>
                <small class="text-muted">Room Type</small>
                <p class="mb-0 fw-bold"><%=booking.type%></p>
              </div>
              <div class="text-end">
                <small class="text-muted">Total Price</small>
                <p class="mb-0 fw-bold"><%=booking.listing.price%></p>
              </div>
            </div>
            <ul class="amenities-list mb-3">
              <li>Free WiFi</li>
              <li>Breakfast</li>
              <li>Pool</li>
              <li>Spa</li>
            </ul>

            <div class="d-flex justify-content-end">
              <button class="btn btn-outline-secondary btn-sm">
                View Details
              </button>
              <button class="btn btn-outline-danger btn-sm">
                Cancel Booking
              </button>
            </div>
          </div>
        </div>
      </div>
      <%}%>
    </div>
  </div>
</body>
